<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout_credits"
    >

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Credits"
        android:background="#2055c1"
        android:textSize="30sp"
        android:textColor="#ffff"
        android:textStyle="bold"
        android:textAlignment="center"
        android:paddingTop="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22dp"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:padding="15dp"
        android:text="This App is creatred by Nilay Pathak as an Assignment of Awaaz IIT Kharagpur's Summer Workshop. All the credits to the content posted in it goes to Awaaz IIT Kharagpur."/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SELECT BACKGROUND COLOR"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_marginTop="100dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <Button
            android:id="@+id/button9"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Green"
            android:layout_margin="20dp"
            android:onClick="change4"/>

        <Button
            android:id="@+id/button10"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Blue"
            android:layout_margin="20dp"
            android:onClick="change5"/>

        <Button
            android:id="@+id/button8"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Red"
            android:layout_margin="20dp"
            android:onClick="change6"
            />
    </LinearLayout>


</LinearLayout>